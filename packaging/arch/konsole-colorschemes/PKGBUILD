pkgname=konsole-colorschemes
pkgver=1.0
pkgrel=1
pkgdesc="Additional Konsole color schemes"
arch=('any')
license=('MIT')
depends=(konsole)
source=(Argonaut.colorscheme
        Cobalt2.colorscheme
        Gruvbox.colorscheme
        MaterialDark.colorscheme
        OneDark.colorscheme
        TangoDark.colorscheme
        KonsoleArgonaut.colors
        KonsoleCobalt2.colors
        KonsoleGruvbox.colors
        KonsoleMaterialDark.colors
        KonsoleOneDark.colors
        KonsoleTangoDark.colors)
