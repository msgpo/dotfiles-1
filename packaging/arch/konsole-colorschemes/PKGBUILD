package() {
    install -Dm644 "$srcdir/Argonaut.colorscheme" "$pkgdir/usr/share/konsole/Argonaut.colorscheme"
    install -Dm644 "$srcdir/Cobalt2.colorscheme" "$pkgdir/usr/share/konsole/Cobalt2.colorscheme"
    install -Dm644 "$srcdir/Gruvbox.colorscheme" "$pkgdir/usr/share/konsole/Gruvbox.colorscheme"
    install -Dm644 "$srcdir/MaterialDark.colorscheme" "$pkgdir/usr/share/konsole/MaterialDark.colorscheme"
    install -Dm644 "$srcdir/OneDark.colorscheme" "$pkgdir/usr/share/konsole/OneDark.colorscheme"
    install -Dm644 "$srcdir/TangoDark.colorscheme" "$pkgdir/usr/share/konsole/TangoDark.colorscheme"

    install -Dm644 "$srcdir/KonsoleArgonaut.colors" "$pkgdir/usr/share/color-schemes/KonsoleArgonaut.colors"
    install -Dm644 "$srcdir/KonsoleCobalt2.colors" "$pkgdir/usr/share/color-schemes/KonsoleCobalt2.colors"
    install -Dm644 "$srcdir/KonsoleGruvbox.colors" "$pkgdir/usr/share/color-schemes/KonsoleGruvbox.colors"
    install -Dm644 "$srcdir/KonsoleMaterialDark.colors" "$pkgdir/usr/share/color-schemes/KonsoleMaterialDark.colors"
    install -Dm644 "$srcdir/KonsoleOneDark.colors" "$pkgdir/usr/share/color-schemes/KonsoleOneDark.colors"
    install -Dm644 "$srcdir/KonsoleTangoDark.colors" "$pkgdir/usr/share/color-schemes/KonsoleTangoDark.colors"
}
